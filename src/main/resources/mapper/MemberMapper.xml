<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.first.boiler.mapper.MemberMapper">

    <select id="searchAll" resultType="com.first.boiler.entity.MemberVO">
        select * from members;
    </select>

    <select id="logIn" parameterType="String" resultType="com.first.boiler.entity.MemberVO">
        select * from members where id = #{id} and pw = #{pw};
    </select>

    <insert id="signUp" parameterType="com.first.boiler.entity.MemberVO">
        insert into members values (#{id},#{pw},#{nick},#{addr});
    </insert>

    <select id="getAllRe" resultType="com.first.boiler.entity.RealestatesVO">
        select * from realestates;
    </select>

    <select id="distanceCheck" parameterType="float" resultType="com.first.boiler.entity.RealestatesVO">select * from realestates where 1 >= ( 6371 * acos( cos( #{lat}*3.14/180 ) * cos( lat*3.14/180 ) * cos( (lng*3.14/180) - (#{lng}*3.14/180) ) + sin( #{lat}*3.14/180 ) * sin( lat*3.14/180 ) ) );</select>



</mapper>